#!/bin/sh

### BEGIN INIT INFO
# Provides:          hhvm
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts the HipHop VM web server
# Description:       starts HipHop VM using start-stop-daemon
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
HPHP_HOME=/usr/local/src/hiphop-php/hhvm
DAEMON=$HPHP_HOME/hphp/hhvm/hhvm
NAME=hhvm
DESC="HipHop VM"
CONFIG=/etc/hhvm/config.hdf
JITREPO=/tmp/.hhbc.hhvm

# Include hhvm defaults if available
if [ -f /etc/default/hhvm ]; then
        . /etc/default/hhvm
fi

test -x $DAEMON || exit 0

set -e

. /lib/lsb/init-functions

test_hhvm_config() {
	if [ ! -f "${CONFIG}" ] ; then
		echo "Please create ${CONFIG}"
		return 1
	fi
	return 0
}

start() {
				echo -n "Starting $DESC: "
                start-stop-daemon --start --background --quiet \
				    --pidfile $PIDFILE \
				    --exec $DAEMON \
				    -- -m server -c "$CONFIG" $ARGS $DAEMON_OPTS || true
				echo "$NAME."
}

stop() {
				echo -n "Stopping $DESC: "
                start-stop-daemon --stop --pidfile $PIDFILE \
		    		--exec $DAEMON || true
		    	echo "$NAME."
}

case "$1" in
	start)
		test_hhvm_config
		start
		;;

	stop)
		stop
		;;

	restart)
		test_hhvm_config
        stop
        echo "Sleeping for 3 seconds..."
    	sleep 3
        rm $JITREPO
        start
        ;;
        
	status)
		status_of_proc -p $PIDFILE "$DAEMON" hhvm && exit 0 || exit $?
		;;
	*)
		echo "Usage: $NAME {start|stop|status|restart}" >&2
		exit 1
		;;
esac

exit 0