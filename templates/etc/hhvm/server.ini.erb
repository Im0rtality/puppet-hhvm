; php options
pid = <%= scope.lookupvar('hhvm::params::pid') %>

; hhvm specific
hhvm.server.port = <%= scope.lookupvar('hhvm::port') %>
hhvm.server.file_socket= <%= scope.lookupvar('hhvm::params::socket') %>
hhvm.server.type = <%= scope.lookupvar('hhvm::params::server_type') %>
hhvm.server.default_document = <%= scope.lookupvar('hhvm::params::default_document') %>
hhvm.log.use_log_file = <%= scope.lookupvar('hhvm::params::use_log_file') %>
hhvm.log.file = <%= scope.lookupvar('hhvm::params::error_log') %>
hhvm.repo.central.path = <%= scope.lookupvar('hhvm::params::jit_repo') %>
hhvm.server.source_root = <%= scope.lookupvar('hhvm::params::source_root') %>

; php compatibility
hhvm.server.allow_duplicate_cookies = <%= scope.lookupvar('hhvm::params::allow_duplicate_cookies') %>
hhvm.enable_obj_destruct_call = 1
hhvm.enable_zend_sorting = 1

; logging
hhvm.log.admin_log.file = <%= scope.lookupvar('hhvm::params::admin_log') %>

; admin server
<% if scope.lookupvar("hhvm::admin_server_password") != '' %>
hhvm.admin_server.password = <%= scope.lookupvar('hhvm::admin_server_password') %>
<% end %>
hhvm.admin_server.port = <%= scope.lookupvar('hhvm::params::admin_server_port') %>
hhvm.admin_server.thread_count = <%= scope.lookupvar('hhvm::params::admin_server_thread_count') %>

; apc
hhvm.server.apc.enable_apc = <%= scope.lookupvar('hhvm::params::enable_apc') %>

; jit
hhvm.jit = <%= scope.lookupvar('hhvm::jit_enabled') %>
hhvm.jit_warmup_requests = <%= scope.lookupvar('hhvm::jit_warmup_requests') %>

; debugger
hhvm.debugger.enable_debugger = <%= scope.lookupvar('hhvm::enable_debugger') %>
hhvm.debugger.enable_debugger_server = <%= scope.lookupvar('hhvm::enable_debugger_server') %>
hhvm.debugger.port = <%= scope.lookupvar('hhvm::params::debugger_port') %>
hhvm.debugger.default_sandbox_path = <%= scope.lookupvar('hhvm::source_root') %>

<% if scope.lookupvar('hhvm::server_ini_cfg_append') and !scope.lookupvar('hhvm::server_ini_cfg_append').empty? -%>
	<% scope.lookupvar('hhvm::server_ini_cfg_append').each do |key, val| -%>
<%= key %>=<%= val %>
	<% end -%>
<% end -%>