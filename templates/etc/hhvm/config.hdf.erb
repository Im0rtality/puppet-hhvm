<% if @config_hdf_env_append -%>
	;environment variables
	<% if !@config_hdf_env_append.empty? -%>
	EnvVariables {
		<% @config_hdf_env_append.each do |key, val| -%>
			<%= key %> = <%= val %>
		<% end -%>
	}
	<% end -%>
<% end -%>

<% if @config_hdf_dyn_ext_append and !@config_hdf_dyn_ext_append.empty? -%>
DynamicExtensions {
	<% @config_hdf_dyn_ext_append.each do |key, val| -%>
		<%= key %> = <%= val %>
	<% end -%>
}
<% end -%>
