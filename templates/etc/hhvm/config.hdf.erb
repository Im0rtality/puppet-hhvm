<% if scope.lookupvar("hhvm::config_hdf_env_append") -%>
  <%
  config_hdf_env_append = scope.lookupvar('hhvm::config_hdf_env_append')
  -%>
  <% if scope.lookupvar('config_hdf_env_append') and !config_hdf_env_append.empty? %>
  	<% if config_hdf_env_append.is_a?(Array) %>
EnvVariables {
		<% config_hdf_env_append.each_pair do |key, val| -%>
			<%= key %> = <%= val %>
		<% end -%>
}
	<% end %>
  <% end %>
<% end -%>

<% if scope.lookupvar("hhvm::config_hdf_dyn_ext_append") -%>
